<div class="container pt-5" >
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h1>All restaurants</h1>
      <ul>
        <% @restaurants.each do |restaurant| %>
          <li><%= link_to restaurant.name, restaurant_path(restaurant) %> (<%= restaurant.category.capitalize %>)</li>
        <% end %>
      </ul>
      <p><%= link_to('Add a new restaurant', new_restaurant_path) %></p>
    </div>
  </div>
</div>
